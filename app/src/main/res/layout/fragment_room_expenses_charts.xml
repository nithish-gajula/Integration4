<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_light"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".RoomExpensesChartsFragment">

    <TextView
        android:id="@+id/warn_tv_room_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Room expenses file not found Please visit Room expenses first"
        android:textSize="25sp"
        android:visibility="gone"/>

    <ScrollView
        android:id="@+id/charts_sv_room_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="1dp">

            <com.github.aachartmodel.aainfographics.aachartcreator.AAChartView
                android:id="@+id/aaChartViewColumn_room_id"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginVertical="5dp"/>

            <com.github.aachartmodel.aainfographics.aachartcreator.AAChartView
                android:id="@+id/aaChartViewSpline_room_id"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginVertical="5dp"/>

            <com.github.aachartmodel.aainfographics.aachartcreator.AAChartView
                android:id="@+id/aaChartViewArea_room_id"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginVertical="5dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>